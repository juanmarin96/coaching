
@{
    ViewBag.Title = "PagosPayPal";
}




<div class="container" style="margin-top: 200px;">
    <h4>PayPal Payment:</h4>

    <p>
        Please use the form below to pay for any service from Coaching for Wellness, which can be a mentoring session (US$100), a module's fee (US$1,000) or even a complete certification program.<br> Please select the amount to pay and type the corresponding service on the text field.
        <br>This is a <strong>One Time </strong>payment type.<br> Thank you.
        <br>

    </p>

    <table border="1" width="400" height="200" bordercolor="#CCCCCC" align="center" cellspacing="0" cellpadding="0">
        <tr>
            <td align="center">
                <form action="https://www.paypal.com/cgi-bin/webscr" method="post">

                    <table>
                        <tr>
                        <td colspan="2" align="center" valign="top">


                            <h2>
                                <img src="~/Content/Images/paypal_logo.jpg" alt="PayPal Logo"/><br/>
                                Payment Gateway
                            </h2>
                        </td>
                        <tr>
                            <td>
                                <input type="hidden" name="cmd" value="_s-xclick">
                                <input type="hidden" name="hosted_button_id" value="YFD7AVFZAVK8A">
                            </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td align="right">
                                <p>
                                    <input type="hidden" name="on0" value="Select amount to pay:">
                                    <strong>Select amount to pay:</strong>
                                </p>
                            </td>
                            <td>
                                <select name="os0">
                                    <option value="a)">a) $50.00 USD</option>
                                    <option value="b)">b) $100.00 USD</option>
                                    <option value="c)">c) $125.00 USD</option>
                                    <option value="d)">d) $450.00 USD</option>
                                    <option value="e)">e) $500.00 USD</option>
                                    <option value="f)">f) $1,000.00 USD</option>
                                    <option value="g)">g) $1,500.00 USD</option>
                                    <option value="h)">h) $2,500.00 USD</option>
                                    <option value="i)">i) $3,000.00 USD</option>
                                    <option value="j)">j) $4,000.00 USD</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td align="right">
                                <p>
                                    <input type="hidden" name="on1" value="Service you are paying for:">
                                    <strong> Service you are paying for:</strong>
                                </p>
                            </td>
                            <td> <input type="text" name="os1" maxlength="200"></td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                                <input type="hidden" name="currency_code" value="USD"><br/>
                                <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                                <img alt="" border="0" src="https://www.paypalobjects.com/es_XC/i/scr/pixel.gif" width="1" height="1">
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>

                    </table>

                </form>

            </td>
        </tr>
    </table>
</div>



