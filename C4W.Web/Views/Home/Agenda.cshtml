@model IEnumerable<C4W.Web.Models.Event>
@{
    ViewBag.Title = "Agenda";
}

<div class="row">
    <img src="~/Content/Images/Carousel/3 FRONT.jpg" class="img-responsive" style="width: 100%;"/>
</div>

@foreach (var item in Model)
{
    <div class="row">
        @GUI.DateBtn(item, "col-sm-3")
        <div class="col-sm-2 col-xs-2 widget-container">
            @{ item.FlagUrl += ".png"; }
            <img class="img-responsive" style="margin-right: 10px;" src="~/Content/Images/Flags/@item.FlagUrl" /> 
            <a class="btn bgray hidden-xs" style="width: 100%; margin-top: 5px;" href="~/Home/Contact?e=@item.Id">ME INTERESA</a>
        </div>
        <div class="col-sm-7  col-xs-10 widget-container">
            @item.Location <br />
            <small>
               @item.Title
            </small>       

            <p>@item.ShortDesc</p>   
            <a class="btn bgray visible-xs" href="~/Home/Contact?e=@item.Id">ME INTERESA</a>
        </div>
    </div>
}


@section scripts{
    <script>
        $('.datetrigger').click(function () {
            var id = '#' + $(this).attr('id');
            $('#event-title').html($(this).data("title"));
            $('#event-desc').html($(id+'_desc').html());
            $('#myModal').modal('show');
            $("#interesa").attr("href", "/Home/Contact?e=" + $(this).data('eventid'));
        });
    </script>
}